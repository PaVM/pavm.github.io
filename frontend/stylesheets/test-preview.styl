

.test-preview {
  margin-top 45px
  margin-bottom 25px
  text-align center
  color #333
}

.test-preview__title {
  font-family ralewayMedium
  font-size 24px

  @media only screen and (max-width: 800px) {
    & {
      font-size 22px
    }
  }
}

.test-preview__subtitle {
  font-family ralewayRegular
  font-size 16px
  display block
  margin 2px 0

  @media only screen and (max-width: 800px) {
    & {
      display inline
      font-size 14px
    }
  }
}
